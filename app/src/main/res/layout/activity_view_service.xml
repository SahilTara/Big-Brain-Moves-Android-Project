<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.ViewServiceActivity"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/serviceTypeText"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="18sp" />

        <include layout="@layout/itemdivider"/>

        <TextView
            android:id="@+id/licensedTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textSize="18sp" />

        <include layout="@layout/itemdivider"/>

        <TextView
            android:id="@+id/availabilitiesTextView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:text="General Availabilities"
            android:textSize="18sp" />

        <!-- Start Table of Availabilities -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Start Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Item 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Monday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/mondayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Start Item 2-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Tuesday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/tuesdayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Start Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Item 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Wednesday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/wednesdayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Start Item 2-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Thursday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/thursdayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Start Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Item 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Friday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/fridayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Start Item 2-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Saturday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/saturdayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <!-- Start Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!-- Item 1-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <!-- Day -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:text="Sunday:"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                    <!-- Time Range -->
                    <TextView
                        android:id="@+id/sundayRangeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Start Item 2-->
                <LinearLayout
                    android:id="@+id/spaceCreator"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <!-- End Table-->
        <include layout="@layout/itemdivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/providerRatingTextView"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Rating:"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5" />
        </LinearLayout>

        <include layout="@layout/itemdivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/providerNameTextView"
                android:layout_width="235dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewProfile"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Profile" />

        </LinearLayout>

        <include layout="@layout/itemdivider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMakeBooking"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="Make Booking" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewRatings"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:text="View Ratings" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>